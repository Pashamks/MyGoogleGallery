
@inherits LoginModel
    <style>

        body {
           
            background-repeat: no-repeat;
            background-size: 100% 100%;

        }
        html {
            height: 100%;
        }
        .main {
            padding-top: 1%;
            display: flex;
            justify-content: center;
            width: 100%;
            height: 100%;
            object-fit: fill;
        }   
        .my-text{
            color: black;
            margin-right: 5px;
        }
        .borders {

        }
       
    </style>
<div class="main">
    <div>
        <div class="col">
            <img src="https://d29fhpw069ctt2.cloudfront.net/icon/image/74217/preview.svg"
                 width="300" height="200" align="right" />
            <img  src="https://d29fhpw069ctt2.cloudfront.net/icon/image/74216/preview.svg"
                 width="300" height="200" align="right" />
            <img  src="https://d29fhpw069ctt2.cloudfront.net/icon/image/74218/preview.svg"
                 width="300" height="200" align="right" />
        </div>
        <EditForm class="borders" Model="@LoginData" OnValidSubmit="LoginAsync">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="row d-flex justify-content-center">
                <h1 style="color: black; ">Welcome to furniture shop!</h1>
            </div>
            <div class="form-group row d-flex justify-content-center">
                <label for="lastName" class="col-sm-2 col-form-label my-text">
                    Email:
                </label>
                <div class="col-sm-10 d-flex justify-content-center">
                    <InputText id="lastName" class="form-control w-50" placeholder="Email"
                               @bind-Value="LoginData.Email" />
                </div>
            </div>
            <div class="form-group row d-flex justify-content-center">
                <label for="email" class="col-sm-2 col-form-label my-text ">
                    Password:
                </label>
                <div class="col-sm-10 d-flex justify-content-center">
                    <InputText id="email" class="form-control w-50" placeholder="Password" type="password"
                               @bind-Value="LoginData.Password" />
                </div>
            </div>
            <div class="d-flex justify-content-center pr-3">
                <button class="btn btn-primary w-25" type="submit">Login</button>
            </div>

        </EditForm>
        <div class="col">
            <img src="https://d29fhpw069ctt2.cloudfront.net/icon/image/74208/preview.svg"
                 width="300" height="200" align="right" />
            <img  src="https://d29fhpw069ctt2.cloudfront.net/icon/image/74214/preview.svg"
                 width="300" height="200" align="right" />
            <img  src="https://d29fhpw069ctt2.cloudfront.net/icon/image/74221/preview.svg"
                 width="300" height="200" align="right" />
        </div>
    </div>
    
</div>


