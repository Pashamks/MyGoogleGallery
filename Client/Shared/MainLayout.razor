@inherits LayoutComponentBase

<AuthorizeView>
    <Authorized>
        <div class="page">
            <div class="sidebar" style="background: #1D1F2A; ">
                @if (@context.User.Identity.Name == "admin@gmail.com")
                {
                    <NavMenu />
                }
                else
                {
                    <UserNavMenu/>
                }

            </div>

            <div class="main">
                <div class="top-row px-4" style="background: #1D1F2A; ">
                    <p style="color: white;">Welcome @context.User.Identity.Name</p>
                    <a href="http://blazor.net" target="_blank" class="ml-md-auto">About</a>
                </div>

                <div class="content px-4">
                    @Body
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <Login></Login>
    </NotAuthorized>
</AuthorizeView>
